<div class="posts new">
	<h1>新規投稿</h1>
	<% @post.errors.full_messages.each do |m| %>
		<%= m %><br/>
	<% end %>
	<div class="post-item">
		<%= form_with model: @post, url: { action: "create" } do |f| %>
			<div>投稿内容<br/>
				<%= f.text_area :content %>
			</div>ユーザid<br/>
			<div><%= f.number_field :user_id %></div>
			<div><%= f.file_field :img %></div>
			<%= f.submit "投稿" %>
		<% end %>
	</div>
</div>

